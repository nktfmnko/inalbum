<div class="container mt-5">
    <div class="ml-20">
        <div class="flex justify-start items-center">
            <img class="size-16 rounded-full" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtRs_rWILOMx5-v3aXwJu7LWUhnPceiKvvDg&s" alt="">
            <h1 class="text-6xl"><%= @user.name%></h1>
        </div>
        <h6>
            <%= "Сделано постов: #{@user.posts.size}"%>
        </h6>
    </div>
    <div class="flex flex-wrap -mx-4 ml-20 mr-20">
    <% @posts.each do |post| %>
        <div class="w-full sm:w-1/2 lg:w-1/3 p-4">
            <div onclick="showDialog('<%= j post.title%>', '<%= j post.body%>', '<%= j post.tags%>', '<%= j post.user.name%>', '<%= j url_for(post.image)%>')" class="bg-white rounded-lg shadow-lg hover:bg-gray-200 transition duration-300">
                <% if post.image.attached? %>
                    <%= image_tag post.image, class: "rounded-t-lg w-full h-64 object-cover" %>
                <% end %>
            <div class="p-4">
                <h2 class="text-lg font-semibold truncate"><%= post.title %></h2>        
            </div>
        </div>
        </div>
    <% end %>
    </div>
</div>